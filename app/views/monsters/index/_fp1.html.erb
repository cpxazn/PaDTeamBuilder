<table class="table table-striped front-page">
	<thead>
		<tr class="center">
			<th colspan=4>Leader/Sub Activity</th>
		</tr>
	</thead>
	<thead>
		<tr class="center">
			<th>Leader</th>
			<th>Sub</th>
			<th>Score</th>
			<th>Time Ago</th>
		</tr>
	</thead>
	<tbody>
			<% votes.each do |v| %>
				<tr class="center">
					<td><%= link_to image_tag(fetch_monster_url_by_id_json(v.leader.id), :border => 0, title: detailed_tooltip(v.leader.id, nil, nil), alt: v.leader.name, size: '60') , v.leader %></td>
					<td><%= link_to image_tag(fetch_monster_url_by_id_json(v.sub.id), :border => 0, title: detailed_tooltip(v.sub.id, nil, nil), alt: v.sub.name, size: '60') , v.sub	 %></td>
					<td><%= v.score %></td>	
					<td><%= time_ago(v.created_at) %></td>
				</tr>
			<% end %>
	</tbody>
</table>
