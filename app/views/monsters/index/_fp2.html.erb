<table class="table table-striped front-page">
	<thead>
		<tr class="center">
			<th colspan=4>Leader/Leader Activity</th>
		</tr>
	</thead>
	<thead>
		<tr class="center">
			<th>Leader 1</th>
			<th>Leader 2</th>
			<th>Score</th>
			<th>Time Ago</th>
		</tr>
	</thead>
	<tbody>
			<% votes.each do |v| %>
				<tr class="center">
					<td><%= link_to image_tag(fetch_monster_url_by_id_json(v.leader1.id), :border => 0, title: detailed_tooltip(v.leader1.id, nil, nil), alt: v.leader1.name, size: '60') , v.leader1 %></td>
					<td><%= link_to image_tag(fetch_monster_url_by_id_json(v.leader2.id), :border => 0, title: detailed_tooltip(v.leader2.id, nil, nil), alt: v.leader2.name, size: '60') , v.leader2	 %></td>
					<td><%= v.score %></td>	
					<td><%= time_ago(v.created_at) %></td>
				</tr>
			<% end %>
	</tbody>
</table>
