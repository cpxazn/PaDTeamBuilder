<div class="news-container">
	<div class="page-header news">
		<h1>Welcome <small><a href="#" class="toggle" id="news">Hide</a></small></h1>
	</div>
	<div class="news-content">
		<% @pinned.each do |news| %>
			<div class="news panel panel-default">
			  <div class="panel-heading">
				<h3 class="panel-title"><%= news.title %></h3>
			  </div>
			  <div class="panel-body">
				<%= news.news.html_safe %>
			  </div>
			  <% if user_signed_in? and current_user.admin %>
				<div class="panel-footer">
					<span style="float:right"><%= link_to 'Edit', edit_news_path(news) %></span>
				</div>
			  <% end %>
			</div>
		<% end %>
	</div>
	<div class="page-header updates">
		<h1>Updates <small><a href="#" class="toggle" id="updates">Hide</a></small></h1>
	</div>
	<div class="updates-content">
		<% @updates.each do |news| %>
			<div class="panel panel-default">
			  <div class="panel-heading">
				<h3 class="panel-title"><%= news.title %></h3>
			  </div>
			  <div class="panel-body">
				<%= news.news.html_safe %>
			  </div>
			  <div class="panel-footer">
				<% if user_signed_in? and current_user.admin %>
					<span style="float:left"><%= format_date(news.created_at) %></span>
					<span style="float:right"><%= link_to 'Edit', edit_news_path(news) %></span>
				<% end %>
			  </div>
			</div>
		<% end %>
	</div>
</div>
