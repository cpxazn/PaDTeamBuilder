<%= form_for(@news) do |f| %>
  <% if @news.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@news.errors.count, "error") %> prohibited this news from being saved:</h2>

      <ul>
      <% @news.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_area :title, cols: 100, rows: 1 %>
  </div>
  <div class="field">
    <%= f.label :news %><br>
    <%= f.text_area :news,  cols: 100, rows: 16 %>
	<%= f.hidden_field :user_id, value: current_user.id %>
  </div>
  <div class="field">
    <%= f.label :pinned %>
    <%= f.check_box :pinned %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
