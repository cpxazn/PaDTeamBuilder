   
<div class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
    <div class="panel panel-default" >
        <div class="panel-heading">
             <div class="panel-title"><% if @url_readonly == false %>Create New<% else %>Edit<% end %> Link</div>	
        </div>     
        <div style="padding-top:30px" class="panel-body" >                          
			<%= form_for(@monster_link) do |f| %>
				<div style="margin-bottom: 25px" class="input-group">
					<span class="input-group-addon">Link Type</span>
					<%= f.select(:link_type, ['guide', 'discussion'], {selected: 'guide'}, {:class => "form-control"}) %>
				</div>
				
				<div style="margin-bottom: 25px" class="input-group">
					<span class="input-group-addon"><i class="glyphicon glyphicon-cloud"></i></span>
					<%= f.text_field :url, :readonly => @url_readonly, autocomplete: false, class: "form-control", placeholder: "url (reddit or puzzleanddragonsforum only)" %>
				</div>
				
				<div style="margin-bottom: 25px" class="input-group">
					<span class="input-group-addon">Version</span>
					<%= f.collection_select(:version_id, Version.recent, :id, :number, {:selected => Version.latest_na.id}, {class:"form-control"}) %>
				</div>
				
				<div style="margin-bottom: 25px" class="input-group">
					<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
					<%= f.text_field(:monster_id, value: @monster_id, :readonly => true, autocomplete: false, class: "form-control") %>
				</div>
				
				<div style="margin-top:10px" class="form-group">
					<div class="col-sm-12 controls">
						<%= f.submit "Submit", class: "btn btn-default" %>
					</div>
				</div>
			<% end %>
			<% if @url_readonly == true %>
				<div class="form-group">						
					<div style="margin-top:10px" class="col-sm-12 controls">
						<%= button_to 'Delete', @monster_link, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
					</div>						
				</div>
			<% end %>
		</div>
    </div>                     
</div>